<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <declare-styleable name="DashBoardView">
        <attr name="dashRadius" format="float" />
        <attr name="dashAngle" format="integer" />
        <attr name="pointerLength" format="float" />
        <attr name="shapeWidth" format="float" />
        <attr name="shapeHeight" format="float" />
        <attr name="pointer" format="integer" />
    </declare-styleable>
</resources>
